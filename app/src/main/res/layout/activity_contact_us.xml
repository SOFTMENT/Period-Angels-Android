<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sfprosemibold2"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2FFFFFFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Period Angels is a partnership between Gift Wellness (giftwellness.co.uk), a social enterprise company and the Gift Wellness Foundation (periodpoverty.uk) a charity registered in Britain"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/sfproregular2"
                />

            <LinearLayout
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_email_24"
                    />
                <TextView
                    android:textColorLink="#00f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="appteam@periodpoverty.uk"
                    android:layout_marginStart="8dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/sfproregular2"
                    android:autoLink="email"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_contact_phone_24"
                    />
                <TextView
                    android:textColorLink="#00f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+44 (0)1332 318311"
                    android:layout_marginStart="8dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/sfproregular2"
                    android:autoLink="phone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_my_location_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/sfproregular2"
                    android:lineSpacingExtra="2dp"
                    android:text="Gift Wellness Foundation, Suite 14 Keynes House, Chester Park, Alfreton Road, Derby DE21 4AS United Kingdom\n\nCharity registration number: 1182451"
                    android:textColor="@color/black"
                    android:textColorLink="#00f"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
