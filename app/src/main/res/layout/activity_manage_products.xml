<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Volunteer.ManageProductsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Manage Products"
                android:fontFamily="@font/sfpromedium2"
                android:textColor="@color/app_black"
                android:textSize="17sp"
                />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/enterQuantity"
        android:fontFamily="@font/sfprosemibold2"
        android:backgroundTint="@color/main_color"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Enter Quantity"
        android:layout_below="@+id/toolBar"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_back"
        android:layout_width="150dp"
        android:layout_height="40dp"

        />

    <TextView
        android:textColor="#121212"
        android:fontFamily="@font/sfpromedium2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/enterQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record the total number of individual products youâ€™ve collected."
        android:id="@+id/headline1"
        />

    <TextView
        android:id="@+id/headline2"
        android:textColor="#121212"
        android:fontFamily="@font/sfpromedium2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example: If you have collected 50 packs of period pads containing 10 pads each, then insert 500 in the box."
        />

    <LinearLayout

        android:id="@+id/middleLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headline2"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Period Pads"
                android:textColor="#121212"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/padsET"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_back"
                android:fontFamily="@font/sfpromedium"
                android:gravity="center"
                android:inputType="number"

                android:textColor="@color/grey"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Tampons"
                android:textColor="#121212"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/tamponsET"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_back"
                android:fontFamily="@font/sfpromedium"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/grey"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Reusable Products"
                android:textColor="#121212"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/reusableET"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_back"
                android:fontFamily="@font/sfpromedium"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/grey"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Menstrual Cups"
                android:textColor="#121212"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/menstrualET"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_back"
                android:fontFamily="@font/sfpromedium"
                android:gravity="center"
                android:inputType="number"

                android:textColor="@color/grey"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemibold2"
                android:text="Plastic Free"
                android:textColor="#121212"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/plasticFreeET"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_back"
                android:fontFamily="@font/sfpromedium"
                android:gravity="center"
                android:inputType="number"

                android:textColor="@color/grey"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/middleLL"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save"
        android:fontFamily="@font/sfprosemibold2"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"
        android:background="@drawable/btn_back"
        android:id="@+id/save"
        android:backgroundTint="@color/main_color"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You!"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sfpromedium2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/save"
        android:gravity="center_horizontal"
        />

</RelativeLayout>
