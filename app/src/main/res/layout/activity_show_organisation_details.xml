<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:background="#2AFFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:context=".ShowOrganisationDetails">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            >
            <androidx.cardview.widget.CardView

                android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="36dp"

                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Softment"
                android:fontFamily="@font/sfprobold2"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <TextView
                    android:id="@+id/distance"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="2 KM"
                    android:fontFamily="@font/sfprosemibold2"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>


        </LinearLayout>
        <TextView

            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            android:text="7869992341"
            android:fontFamily="@font/sfpromedium2"
            android:textColor="#EAEAEA"
            android:textSize="12sp"
            android:autoLink="phone"
            android:textColorLink="#FFEB3B"
            />

        <TextView
            android:lineSpacingExtra="2dp"
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:text="233/9b saket nagar bhopal 456665 madhya pradesh india"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/sfpromedium2"
            android:textColor="#EFEFEF"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edittext_back"
            android:backgroundTint="@color/white"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/typeImage"
                android:layout_marginStart="8dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/shop"
                />
            <TextView
                android:id="@+id/typeName"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="12sp"
                android:textColor="@color/app_black"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Products"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/sfprosemibold2"
        />

    <LinearLayout
        android:id="@+id/pLL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/typeLL"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/periodPadsLL"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_back"
            android:backgroundTint="#97343434"
            android:gravity="center"
            >

            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/pads"
                />
            <TextView
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Pads"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/tamponsLL"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_back"
            android:backgroundTint="#97343434"
            android:gravity="center"
            >

            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/tampon"
                />
            <TextView
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tampons "
                android:fontFamily="@font/sfpromedium2"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pLL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/pLL1"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/menstrualLL"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_back"
            android:backgroundTint="#97343434"
            android:gravity="center"
            >

            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/menstrualcup"
                />
            <TextView
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menstrual Cup"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/plasticLL"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_back"
            android:backgroundTint="#97343434"
            android:gravity="center"
            >

            <ImageView
                android:layout_marginStart="8dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/leaves"
                />
            <TextView
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plastic Free"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/reusableLL"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_back"
        android:backgroundTint="#97343434"
        android:gravity="center"
        >

        <ImageView
            android:layout_marginStart="8dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/reuse"
            />
        <TextView
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reusable Products"
            android:fontFamily="@font/sfpromedium2"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/sfprosemibold2"
        />

        <fragment

            android:layout_marginTop="8dp"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="320dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening Hours"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:fontFamily="@font/sfprosemibold2"
        />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_back"
        android:backgroundTint="#92474747"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <LinearLayout
            android:backgroundTint="#97343434"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="Monday"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/mondayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM to 05:00 PM"
                />

        </LinearLayout>
        <LinearLayout

            android:backgroundTint="#97343434"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="Tuesday"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tuesdayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM to 05:00 PM"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="Wednesday"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/wednesdayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM to 05:00 PM"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="Thursday"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/thursdayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM to 05:00 PM"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="Friday"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/fridayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM to 05:00 PM"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpromedium2"
                android:text="Saturday"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/saturdayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 AM to 05:00 PM"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"

            >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfpromedium2"
                android:text="Sunday"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sundayTime"
                android:textColor="@color/white"
                android:fontFamily="@font/sfpromedium2"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>
